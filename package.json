{
	"name": "ts-mcp-template",
	"version": "0.1.0",
	"private": false,
	"type": "module",
	"description": "Lightweight TypeScript MCP server template (stdio transport)",
	"bin": {
		"ts-mcp-template": "dist/index.js"
	},
	"main": "dist/index.js",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"clean": "rimraf dist",
		"lint": "biome lint .",
		"lint:fix": "biome check --write --unsafe .",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"inspector": "npx @modelcontextprotocol/inspector --config .mcp.json --profile ts-mcp-template"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.9.0",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.3",
		"@types/node": "^24.3.1",
		"@vitest/ui": "^3.2.4",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
